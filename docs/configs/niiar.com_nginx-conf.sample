server {
	root /var/www/manti.by/source/trunk;
	access_log /var/www/manti.by/log/access.log;
	error_log  /var/www/manti.by/log/error.log;

	index index.php index.html index.htm;
	server_name manti.by;

	location / { 
		try_files $uri $uri/ @rewrites;
	}
 
	location @rewrites {
		rewrite ^ /index.php last;
	}

	location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
		expires max;
		add_header Pragma public;
		add_header Cache-Control "public, must-revalidate, proxy-revalidate";
	}

	location ~* \.mp3$ {
		expires max;
		add_header Pragma public;
		add_header Cache-Control "public, must-revalidate, proxy-revalidate";
	}

	# proxy the PHP scripts to fastcgi
	location ~ \.php$ {
		root /var/www/manti.by/source/trunk;
		fastcgi_pass 127.0.0.1:9000;
		fastcgi_index index.php;
		fastcgi_param SCRIPT_FILENAME /var/www/manti.by/source/trunk$fastcgi_script_name;
		fastcgi_temp_path /var/www/manti.by/tmp;

		include fastcgi_params;
		fastcgi_param php_value "error_log /var/www/manti.by/log/php_error.log";
		fastcgi_param php_value "session.save_path /var/www/manti.by/tmp";
		fastcgi_param php_value "upload_tmp_dir /var/www/manti.by/tmp";
	}
}
