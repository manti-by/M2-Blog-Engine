upstream manti-by {
    server 127.0.0.1:8080;
}

server {
    listen 80;
    server_name manti.loc ru.manti.loc en.manti.loc;
    charset     utf-8;

    client_max_body_size 200M;

    access_log   /home/manti/www/manti/manti.by/log/nginx_access.log;
    error_log    /home/manti/www/manti/manti.by/log/nginx_error.log;

    location /static/ {
        alias       /home/manti/www/manti/manti.by/static/;

        if ($request_filename ~ "^.*/(.+\.(jpe?g|png|gif|svg|json|webp|js|css|woff2))$") {
            expires max;
            access_log off;
            add_header Cache-Control 'public';
        }
    }

    location /static/(css|js|img|svg)/ {
        deny all;
    }

    location /content/ {
        alias       /home/manti/www/manti/manti.by/content/;

        if ($request_filename ~ "^.*/(.+\.(mp3|mp4))$") {
            set $fname $1;
            add_header Content-Disposition 'attachment; filename="$fname"';
        }

        if ($request_filename ~ "^.*/(.+\.(mp3|mp4|jpe?g|webp|png|svg))$") {
            expires max;
            access_log off;
            add_header Cache-Control 'public';
        }
    }

    location /content/(covers|gallery|preview|profile|release)/ {
        deny all;
    }

    location /robots.txt {
        alias /home/manti/www/manti/manti.by/static/robots.txt;

        expires 30d;
        access_log off;
        add_header Cache-Control 'public';
    }

    location /sw.js {
        alias /home/manti/www/manti/manti.by/static/js/sw.js;

        expires 1d;
        access_log off;
        add_header Cache-Control 'public';
        add_header Service-Worker-Allowed '/';
    }

    location /dashboard {
        expires    off;
        add_header Cache-Control 'private';
    }

    location / {
        uwsgi_pass  manti-by;
        include     /home/manti/www/manti/manti.by/src/deploy/confs/uwsgi-params.conf;
    }
}

server {
    listen 80;
    server_name flower.manti.loc;

    location / {
        proxy_pass  http://127.0.0.1:5555;
        include /home/manti/www/manti/manti.by/src/deploy/confs/proxy-params.conf;
        add_header X-Frame-Options SAMEORIGIN;
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd;
    }
}

server {
    listen 80;
    server_name deluge.manti.loc;

    location / {
        proxy_pass http://127.0.0.1:8888/;
        include /home/manti/www/manti/manti.by/src/deploy/confs/proxy-params.conf;
        add_header X-Frame-Options SAMEORIGIN;
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd;
    }
}